{
    "name": "Angular Development",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
    "postCreateCommand": "npm install -g @angular/cli",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-containers",
                "esbenp.prettier-vscode",
                "angular.ng-template"
            ]
        }
    },
    "forwardPorts": [4200]
}